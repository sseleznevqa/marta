{
  "name": "Marta app",
  "version": "0.36788",
  "description": "Messaging from browser to main app",
  "permissions": ["activeTab", "http://127.0.0.1*/*", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [{
       "matches": ["<all_urls>"],
       "all_frames": true,
       "js":      ["content.js"]
   }],
  "manifest_version": 2
}
